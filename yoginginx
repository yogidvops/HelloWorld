# Nginx Dockerfile
#
# https://github.com/dockerfile/nginx
#

# Pull base image.
FROM ubuntu:18.04

MAINTAINER yogirhce

# Install Nginx.
RUN apt-get update && apt install -y nginx 

COPY /etc/nginx/sites-available/default /etc/nginx/sites-available

RUN systemctl restart nginx

VOLUME ["/home/craterzone/yogi/Mytest/html"]

WORKDIR /var/www/

CMD "Hello Yogi!"
ENTRYPOINT echo

EXPOSE 80
